{% comment %}
  ============================================================================
  DEFINITIVE FIX - Context-Aware Rich Text from Blog Metafield
  - FIX: Uses the 'metafield_tag' filter to correctly render rich text JSON into HTML.
  - REMOVED: Redundant 'rte' div wrapper, as the filter provides its own.
  - UPDATED: CSS is now correctly scoped to the HTML generated by the filter.
  ============================================================================
{% endcomment %}

{%- liquid
  assign stanga_content = article.metafields.custom.add_second_stanga_content
-%}

{%- if stanga_content != blank -%}
  <div
    id="RichTextSection-{{ section.id }}"
    class="rich-text-from-blog rich-text-from-blog--{{ section.id }}"
    data-section-id="{{ section.id }}"
    >
    <div class="page-width page-width--narrow">
      {% comment %} The 'metafield_tag' filter correctly renders the rich text content into HTML tags. {% endcomment %}
      {{ article.metafields.custom.add_second_stanga_content | metafield_tag }}
    </div>
      <div class="article-template__back element-margin-top center{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    <a href="{{ blog.url }}" class="article-template__link link animate-arrow">
      <span class="icon-wrap">{% render 'icon-arrow' %}</span>
      {{ 'blogs.article.back_to_blog' | t: title: blog.title | escape }}
    </a>
  </div>
  </div>
{%- endif -%}

{%- style -%}
  .rich-text-from-blog--{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  }

  
{%- endstyle -%}

{% schema %}
{
  "name": "Rich Text from Metafield",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Metafield Content",
      "info": "This section automatically displays content from the 'custom.add_second_stanga_content' metafield on the current blog post. It will only appear if content exists."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#121212"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Rich Text from Metafield"
    }
  ]
}
{% endschema %}